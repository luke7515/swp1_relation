<h1>Edit Yout Comment</h1>

<%=form_tag '/update', method: 'post', class: "form-inline" do%>
    <input type="hidden" name="id" value = "<%= @comment.id%>">
    <div class="form-group">
        <textarea name="naeyong" class="form-control" value = "<%=@comment.msg %>"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success">
    </div>

<% end %>